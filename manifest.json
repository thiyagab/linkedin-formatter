{
  "name": "LinkedIn AI Post Formatter",
  "version": "1.4",
  "manifest_version": 3,
  "description": "Enhance your LinkedIn posts with bold, italic, and AI-powered text polishing â€” from a simple toolbar inside the LinkedIn editor.",
  "permissions": [
    
  ],
  "host_permissions": [
    "https://www.linkedin.com/*",
    "https://api.openai.com/*",
    "https://generativelanguage.googleapis.com/*",
    "https://openrouter.ai/api/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://www.linkedin.com/*"
      ],
      "js": [
        "content.js"
      ],
      "css": [
        "styles.css"
      ],
      "run_at": "document_idle"
    }
  ]
}